{
  "id": "@slamai/mcp-server",
  "displayName": "SLAMai MCP Server (Base & Ethereum DeFi)",
  "description": "A unified DeFi data server for Ethereum and Base, delivering real-time token prices, market analytics, and historical on-chain activity. Built for traders, analysts, and developers, it powers dashboards, monitoring, and automation with reliable access to token dynamics and blockchain insights.",
  "createdAt": "2026-01-17T02:12:37.104Z",
  "links": {
    "homepage": "",
    "registry": "https://smithery.ai/server/@slamai/mcp-server"
  },
  "connection": {
    "type": "http",
    "runtime": "node",
    "configSchema": {
      "type": "object",
      "title": "MCP Session Configuration",
      "tools": [
        {
          "name": "TokenDiscovery",
          "description": "Discover tokens based on trending, popular, or newest activity within a time window.",
          "inputSchema": {
            "type": "object",
            "required": [
              "mode",
              "activityWindow"
            ],
            "properties": {
              "num": {
                "type": "string",
                "description": "Number of results"
              },
              "mode": {
                "enum": [
                  "trending",
                  "popular",
                  "newest"
                ],
                "type": "string",
                "description": "Discovery mode"
              },
              "category": {
                "type": "string",
                "description": "Category of token (e.g., 'virtuals')"
              },
              "blockchain": {
                "type": "string",
                "default": "ethereum"
              },
              "estimateCost": {
                "type": "boolean",
                "default": false
              },
              "activityWindow": {
                "enum": [
                  "5min",
                  "15min",
                  "1h",
                  "3h",
                  "6h",
                  "1d",
                  "MM-DD-YYYY"
                ],
                "type": "string",
                "description": "Time window or historical date (MM-DD-YYYY)"
              }
            }
          }
        },
        {
          "name": "TokenPrice",
          "description": "Fetch price information for one or more tokens, with optional block or time anchoring.",
          "inputSchema": {
            "type": "object",
            "oneOf": [
              {
                "required": [
                  "symbols"
                ]
              },
              {
                "required": [
                  "addresses"
                ]
              }
            ],
            "properties": {
              "atUtc": {
                "type": "string",
                "description": "Optional timestamp in MM-DD-YYYY hh:mm:ss"
              },
              "symbols": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Token symbols (use instead of addresses)"
              },
              "addresses": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Token addresses (use instead of symbols)"
              },
              "blockchain": {
                "type": "string",
                "default": "ethereum"
              },
              "quoteSymbol": {
                "type": "string",
                "description": "Optional quote symbol"
              },
              "estimateCost": {
                "type": "boolean",
                "default": false
              },
              "quoteAddress": {
                "type": "string",
                "description": "Optional quote address"
              },
              "atBlockNumber": {
                "type": "string",
                "description": "Optional block number"
              },
              "lookbackWindows": {
                "type": "array",
                "items": {
                  "enum": [
                    "1min",
                    "3min",
                    "5min",
                    "15min",
                    "30min",
                    "45min",
                    "1h",
                    "2h",
                    "3h"
                  ],
                  "type": "string"
                },
                "description": "Lookback windows for price snapshots"
              }
            }
          }
        },
        {
          "name": "TokenTransfers",
          "description": "Fetch token transfer activity by filters such as address, direction, or block range.",
          "inputSchema": {
            "type": "object",
            "properties": {
              "num": {
                "type": "string",
                "description": "Number of transfers to return"
              },
              "order": {
                "enum": [
                  "asc",
                  "desc"
                ],
                "type": "string",
                "default": "desc"
              },
              "startUtc": {
                "type": "string",
                "description": "Start time MM-DD-YYYY hh:mm:ss"
              },
              "direction": {
                "enum": [
                  "sent",
                  "received",
                  "all"
                ],
                "type": "string",
                "default": "all"
              },
              "blockchain": {
                "type": "string",
                "default": "ethereum"
              },
              "includeDna": {
                "type": "boolean",
                "default": true
              },
              "estimateCost": {
                "type": "boolean",
                "default": false
              },
              "tokenAddress": {
                "type": "string",
                "description": "Token contract address"
              },
              "startLogIndex": {
                "type": "string",
                "description": "Start log index"
              },
              "walletAddress": {
                "type": "string",
                "description": "Wallet address"
              },
              "startBlockNumber": {
                "type": "string",
                "description": "Start block number"
              },
              "counterpartyAddress": {
                "type": "string",
                "description": "Counterparty wallet address"
              }
            }
          }
        }
      ],
      "required": [
        "apiKey"
      ],
      "properties": {
        "apiKey": {
          "type": "string",
          "description": "Your service API key for authentication. Passed as a query parameter (?apiKey=YOUR_API_KEY)."
        }
      },
      "description": "Configuration for connecting to this MCP server",
      "x-query-style": "dot+bracket",
      "additionalProperties": false
    }
  },
  "capabilities": [
    {
      "name": "TokenPrice",
      "description": "Get prices across timeframes. Defaults to USD if no quote token given. Use ERC20 for custom quotes."
    },
    {
      "name": "TokenTransfers",
      "description": "Get transfer details. Defaults to entire chain if no filters given. Use cursor from response to paginate."
    },
    {
      "name": "TokenDiscovery",
      "description": "List of popular (current or historical), trending or newest tokens."
    }
  ]
}