          "isRequired": false,
          "isSecret": false
        },
        {
          "name": "PROMETHEUS_USERNAME",
          "description": "Username for Prometheus basic authentication",
          "isRequired": false,
          "isSecret": false
        },
        {
          "name": "PROMETHEUS_PASSWORD",
